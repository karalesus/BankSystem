<AnchorPane prefHeight="750.0" prefWidth="850.0" styleClass="create_client_container"
            stylesheets="@../../Styles/CreateClient.css" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.banksystem.Controllers.Worker.CreateClientController">
   <Text layoutX="2.0" layoutY="19.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Создать аккаунт нового клиента"
         AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="14.0"/>
   <VBox fillWidth="false" layoutX="14.0" layoutY="36.0" prefHeight="700.0" prefWidth="600.0"
         AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="40.0">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Имя:"/>
      <TextField fx:id="fName_fld"/>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Фамилия:"/>
      <TextField fx:id="lName_fld"/>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Пароль:"/>
      <TextField fx:id="password_fld"/>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Логин:"/>
      <CheckBox fx:id="pAddress_box" mnemonicParsing="false"/>
      <Label fx:id="pAddress_lbl" styleClass="payee_address_lbl"/>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Счета:"/>
      <CheckBox fx:id="ch_acc_box" mnemonicParsing="false" text="Добавить карту"/>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Баланс карты:"/>
      <TextField fx:id="ch_amount_fld"/>
      <CheckBox fx:id="sv_acc_box" mnemonicParsing="false" text="Добавить номер вклада"/>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Баланс вклада:"/>
      <TextField fx:id="sv_amount_fld"/>
      <Button fx:id="create_client_btn" mnemonicParsing="false" text="Создать аккаунт клиента"/>
      <Label fx:id="error_lbl" layoutX="10.0" layoutY="169.0" styleClass="error_lbl" text="ошибка:"/>
   </VBox>
</AnchorPane>
